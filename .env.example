# SuiteCRM COBOL Banking Integration Environment Configuration

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=suitecrm
DB_USERNAME=suitecrm
DB_PASSWORD=suitecrm_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# COBOL Gateway Configuration
COBOL_HOST=cobol-gateway
COBOL_REST_PORT=8080
COBOL_WS_PORT=8081
COBOL_MONITORING_PORT=8090

# WebSocket Configuration
WEBSOCKET_PORT=8081
WEBSOCKET_HOST=localhost
WEBSOCKET_PROTOCOL=ws
WEBSOCKET_PATH=/

# Docker Container Flag
DOCKER_CONTAINER=true

# Development Settings
USE_MOCK_COBOL=false
DEBUG_MODE=false
LOG_LEVEL=info

# Security Settings
COBOL_AUTH_REQUIRED=true
COBOL_TOKEN_EXPIRY=3600

# Performance Settings
COBOL_CONNECTION_TIMEOUT=30
COBOL_MAX_CONNECTIONS=100
COBOL_PING_INTERVAL=30

# Mainframe Connection (if applicable)
MAINFRAME_HOST=
MAINFRAME_PORT=3270
MAINFRAME_ENCODING=EBCDIC

# SuiteCRM URL
SUITECRM_URL=http://localhost:8082